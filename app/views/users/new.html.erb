<h1>Register</h1>

<%= form_for :user, url: users_path do |f| %>

  <p>
    <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label "Password Confirmation"%>
    <%= f.password_field :password_confirmation %>

    <%= f.submit "Submit" %>

  </p>
  <% end %>
