<!DOCTYPE html>
<html>
  <head>
    <title>CeleryHatersAnon</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <header>
    <h1>We hate celery, yes we do</h1>

    <nav>
      <ul>
        <% if session[:user_id] == nil %>
          <li> <%= link_to "Login", login_path %> </li>
          <li> <%= link_to "Register", new_user_path %> </li>
        <% elsif session[:user_id] %>
          <li> <%= button_to "Logout", { action: 'destroy', controller: 'sessions' }, method: :delete  %>
        <% end %>
        </li>
      </ul>
    </nav>
  </header>
  <body>
    <%= yield %>
  </body>
</html>
